<br>
<div class="container">
  {{!-- post goes here --}}
  <div id="comment" data-pid="{{cid}}"></div>
  {{!-- comments go here --}}
  <div id="comments" class="container"></div>

  {{!-- create comments --}}
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="card grey darken-3">
          <form>
            <div class="card-content white-text">
              <span class="card-title">Create New Comment</span>
              {{!-- content here --}}
              <label for="comtext">Text</label>
              <textarea id="comtext" class="materialize-textarea white-text"></textarea>
            </div>
            <div class="card-action">
              <button id="comSubmit" class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


{{!-- axios --}}
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<!-- materialize -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
