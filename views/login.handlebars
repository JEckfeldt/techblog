<!-- Login -->
<br><br>
<div class="container">
  <!-- spacing div -->
  <div class="row">
    <div class="col s4"></div>
    <!-- main -->
    <main class="col s4 grey darken-3" style="padding: 3%;">
      <!-- form to get information -->
      <form>
        <p>
          <label for="username">username</label>
          <input type="text" class="white-text" name="username" id="username">
        </p>
        <p>
          <label for="password">password</label>
          <input type="password" class="white-text" name="password" id="password">
        </p>
        <!-- submit button -->
        <button id="login" class="btn waves-effect waves-light" type="submit" name="action">Login</button>
      </form>
      <br>
      <a href="/register">New user? Click here to register!</a>
    </main>
    <!-- spacing div -->
    <div class="col s4"></div>
  </div>
</div>
<!-- End Login -->

