<div class="container">
  {{!-- post goes here --}}
  <div>
    <div class="row">
      <div class="col s12">
        <div class="card grey darken-3">
          <form>
            <div id="editPost" data-pid="{{cid}}" class="card-content white-text">
              <span class="card-title">Edit Post</span>
              <label for="editTitle">Title</label>
              <input type="text" class="white-text" name="title" id="editTitle" placeholder="title">
              <label for="editText">Text</label>
              <textarea id="editText" class="materialize-textarea white-text" placeholder="text"></textarea>
            </div>
            <div class="card-action">
              <button id="submitEdit" class="btn waves-effect waves-light orange darken-3" type="submit"
                name="action">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


